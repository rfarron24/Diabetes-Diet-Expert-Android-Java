<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rihaf.diabetesdietexpert.ReminderActivity"
    android:background="#ffffff">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      Set Pengingat Sarapan      "
        android:id="@+id/sarapanbtn"
        android:layout_marginTop="43dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Set Pengingat Makan Siang"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/lunchbtn"
        android:layout_below="@+id/sarapanbtn"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Set Pengingat Makan Malam"
        android:id="@+id/dinnerbtn"
        android:layout_below="@+id/lunchbtn"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/sarapanbtn"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Waktu makan diabetesi:"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Penting untuk diketahui bahwa pembagian waktu makan untuk penderita diabetes ditentukan pada jam tertentu."
        android:id="@+id/textView6"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sarapan            :"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="50dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Makan Siang    :"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Makan Malam  :"
        android:id="@+id/textView9"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="06.00 - 08.00"
        android:textStyle="bold"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="18.00 - 19.00"
        android:textStyle="bold"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="12.00 - 13.00"
        android:id="@+id/textView12"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fitur pengingat waktu makan pada aplikasi ini telah diatur berdasarkan susunan jam makan yang disarankan untuk penderita diabetes."
        android:id="@+id/textView13"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView9"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />


</RelativeLayout>
