<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rihaf.diabetesdietexpert.DbControl"
    android:background="#ffffff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" LIST view"
        android:id="@+id/button2"
        android:onClick="ViewData"
        android:layout_below="@+id/id_txt"
        android:layout_toEndOf="@+id/textView35" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE Profile"
        android:id="@+id/button_delete"
        android:layout_below="@+id/id_txt"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID_PRIMARY KEY :"
        android:id="@+id/textView33"
        android:layout_alignBottom="@+id/id_txt"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_txt"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button_update"
        android:layout_alignStart="@+id/button_update"
        android:textColor="@color/colorPrimary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POP DATA"
        android:id="@+id/button_update"
        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FOOD_ID :"
        android:id="@+id/textView34"
        android:layout_alignBottom="@+id/id_foodtxt"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_foodtxt"
        android:layout_below="@+id/button_update"
        android:layout_alignEnd="@+id/button_update"
        android:layout_alignStart="@+id/button_update"
        android:textColor="@color/colorPrimary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE food"
        android:id="@+id/button_deletefood"
        android:layout_below="@+id/textView34"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_delete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp 1 Golongan"
        android:id="@+id/temp1"
        android:layout_below="@+id/id_foodtxt"
        android:layout_alignEnd="@+id/id_goldiettxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GOL_DIET _ID:"
        android:id="@+id/textView35"
        android:layout_alignBottom="@+id/id_goldiettxt"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_goldiettxt"
        android:layout_below="@+id/temp1"
        android:layout_alignEnd="@+id/id_foodtxt"
        android:textColor="@color/colorPrimary"
        android:layout_alignStart="@+id/id_foodtxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Gol"
        android:id="@+id/button_removegol"
        android:layout_below="@+id/id_goldiettxt"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_deletefood" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp 2 Foodlist"
        android:id="@+id/temp2"
        android:layout_alignTop="@+id/button_removegol"
        android:layout_alignEnd="@+id/id_goldiettxt" />

</RelativeLayout>
