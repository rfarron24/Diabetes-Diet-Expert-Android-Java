<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rihaf.diabetesdietexpert.UserAddFoodlistActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendartxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:layout_alignParentEnd="true"
        android:hint="Nama Makanan" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_portion"
        android:textAlignment="center"
        android:layout_below="@+id/calendartxt"
        android:layout_alignEnd="@+id/calendartxt"
        android:layout_alignParentStart="true"
        android:hint="Ukuran Porsi  (e.g: 1 Piring)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/txt_portioncal"
        android:hint="Kalori "
        android:layout_below="@+id/txt_portion"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/txt_gramportion"
        android:hint="Kalori Per Gram"
        android:layout_below="@+id/txt_portioncal"
        android:layout_alignStart="@+id/txt_portioncal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/txt_proteinfood"
        android:hint="Protein (gram)"
        android:layout_below="@+id/txt_gramportion"
        android:layout_alignStart="@+id/txt_gramportion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/txt_fatfood"
        android:hint="Lemak (gram)"
        android:layout_below="@+id/txt_proteinfood"
        android:layout_alignStart="@+id/txt_proteinfood" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/txt_carbfood"
        android:hint="Karbohidrat (gram)"
        android:layout_below="@+id/txt_fatfood"
        android:layout_alignStart="@+id/txt_fatfood" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/mealtime3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/currentcal3"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/txt_portion"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/calgoldiet3"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/txt_carbfood"
        android:textColor="#ffffff" />

</RelativeLayout>
