<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rihaf.diabetesdietexpert.TemporaryActivity2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input again"
        android:id="@+id/button_input"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:onClick="Input" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK FOODLIST DATABASE"
        android:id="@+id/button_checkdb"
        android:layout_below="@+id/button_input"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:id="@+id/button_edit"
        android:layout_below="@+id/button_checkdb"
        android:layout_centerHorizontal="true"
        android:onClick="Edit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/button_delete"
        android:layout_below="@+id/button_edit"
        android:layout_centerHorizontal="true"
        android:onClick="Delete" />

</RelativeLayout>
