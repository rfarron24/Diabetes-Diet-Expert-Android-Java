<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rihaf.diabetesdietexpert.AdminInputFoodList">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendartxt"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:layout_alignParentEnd="true"
        android:hint="Food Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_portion"
        android:layout_below="@+id/calendartxt"
        android:layout_alignEnd="@+id/calendartxt"
        android:layout_alignParentStart="true"
        android:hint="Portion Size" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_portioncal"
        android:layout_below="@+id/txt_portion"
        android:layout_alignParentStart="true"
        android:hint="Calorie per Portion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_gramportion"
        android:layout_below="@+id/txt_portioncal"
        android:layout_alignParentStart="true"
        android:hint="Calorie per Gram" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_proteinfood"
        android:layout_below="@+id/txt_gramportion"
        android:layout_alignParentStart="true"
        android:hint="Protein (gram)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_fatfood"
        android:layout_below="@+id/txt_proteinfood"
        android:layout_alignParentStart="true"
        android:hint="Fat (gram)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_carbfood"
        android:layout_below="@+id/txt_fatfood"
        android:layout_alignParentStart="true"
        android:hint="Carbohydrate (gram)" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/button_savefood"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button_updatefood"
        android:layout_alignTop="@+id/button_savefood"
        android:layout_alignEnd="@+id/txt_portion"
        android:onClick="UpdateFood" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_idfood"
        android:layout_above="@+id/button_updatefood"
        android:layout_alignEnd="@+id/txt_portion"
        android:layout_alignStart="@+id/button_updatefood"
        android:hint="ID" />

</RelativeLayout>
